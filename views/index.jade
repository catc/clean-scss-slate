							li deeper list item
							li deeper list item
					li list item	
				
				a(href="test") A link
				p This is a paragraph
				p This is another paragraph
				br
				div
					input(type="text")
					br
					input(type="email")
					br
					input(type="url")
					br
					input(type="password")
