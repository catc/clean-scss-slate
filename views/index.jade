doctype html
html
	head
		title= title
		link(rel='stylesheet', href='css/style.css')
		link(rel='stylesheet', href='css/preview.css')

		link(href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700,400' rel='stylesheet' type='text/css')

	body
		#container
			h1 Clean SCSS slate

			#colors
				- var shades = [ {'n' : '$b1', 'code': '#111'}, {'n' : '$b2', 'code': '#222'}, {'n' : '$b3', 'code': '#444'}, {'n' : '$b4', 'code': '#666'}, {'n' : '$b5', 'code': '#aaa'}, {'n' : '$b6', 'code': '#ddd'}, {'n' : '$b7', 'code': '#ededed'} ]
				.shades
					h2 Shades of grey
					- shades.forEach(function(i){
						div(style="background: #{i['code']};")
							span #{i['n']}
							span #{i['code']}
					- })

				- var clrs = [{'n' :'$c-navy', 'code': ' #001F3F;'},{'n' :'$c-blue', 'code': ' #0074D9;'},{'n' :'$c-aqua', 'code': ' #7FDBFF;'},    {'n' :'$c-teal', 'code': ' #39CCCC;'},  {'n' :'$c-olive', 'code': '#3D9970;'}, {'n' :'$c-green', 'code': '#2ECC40;'},   {'n' :'$c-lime', 'code': ' #01FF70;'}, {'n' :'$c-yellow', 'code': ' #FFDC00;'},  {'n' :'$c-orange', 'code': ' #FF851B;'},  {'n' :'$c-red', 'code': '    #FF4136;'},  {'n' :'$c-maroon', 'code': ' #85144B;'}, {'n' :'$c-purple', 'code': ' #B10DC9;'}, {'n' :'$c-fuchsia', 'code': '#F012BE;'}, {'n' : '$c-gray', 'code': '#aaaaaa'}, {'n' : '$c-silver', 'code': '#dddddd'}  ]
				.clrs
					h2 A nicer color palette (<a href="http://clrs.cc" target="_blank">www.clrs.cc</a>)
					- clrs.forEach(function(i, ind){
						div(style="background: #{i['code']};")
							span #{i['n']}
							span #{i['code']}
						- if (ind === 12){
							<br><br><br><br>
						- }					
					- })

				- var windows = [{"n" : "$w-yellow", "code" : "#F2B21B", "n2" : "$w-grey", "code2" : "#242424"},{"n" : "$w-green", "code" : "#76BA43","n2" : "$w-grey", "code2" : "#242424"},{"n" : "$w-blue", "code" : "#436FB6","n2" : "$w-grey", "code2" : "#242424"},{"n" : "$w-red:", "code" : "#AE1D3F" ,"n2" : "$w-grey", "code2" : "#242424"},{"n" : "$w-brown", "code" : "#613111","n2" : "$w-brown2", "code2" : "#2C1A0D"},{"n" : "$w-red2", "code" : "#B62524","n2" : "$w-red3", "code2" : "#491111"},{"n" : "$w-fuschia", "code" : "#C11E52","n2" : "$w-fuschia2", "code2" : "#4C0737"},{"n" : "$w-purple", "code" : "#6D3393","n2" : "$w-purple2", "code2" : "#2C124D"},{"n" : "$w-purple3", "code" : "#4D3D98","n2" : "$w-purple4", "code2" : "#252063"},{"n" : "$w-blue2", "code" : "#206AB4","n2" : "$w-blue3", "code2" : "#15214C"},{"n" : "$w-turquoise", "code" : "#008287","n2" : "$w-turquoise2", "code2" : "#034D60"},{"n" : "$w-emerald", "code" : "#1B9947","n2" : "$w-emerald2", "code2" : "#1F4A23"},{"n" : "$w-green2", "code" : "#34B44A","n2" : "$w-green3", "code2" : "#199947"},{"n" : "$w-orange", "code" : "#F89723","n2" : "$w-orange2", "code2" : "#E36C25"},{"n" : "$w-red4", "code" : "#EE3823","n2" : "$w-red5", "code2" : "#B72025"},{"n" : "$w-pink", "code" : "#ED2977","n2" : "$w-pink2", "code2" : "#B71F6C"},{"n" : "$w-purple5", "code" : "#8459A4","n2" : "$w-purple6", "code2" : "#663F98"},{"n" : "$w-aqua", "code" : "#4CA7DD","n2" : "$w-aqua2", "code2" : "#2B5BA9"},{"n" : "$w-aqua3", "code" : "#66C0ED","n2" : "$w-aqua4", "code2" : "#5C9AD3"},{"n" : "$w-seaspray", "code" : "#4AC1BE","n2" : "$w-seaspray2", "code2" : "#00A9A9"},{"n" : "$w-lgreen", "code" : "#92C83D","n2" : "$w-lgreen2", "code2" : "#83BA40"},{"n" : "$w-yellow2", "code" : "#E1B923","n2" : "$w-yellow3", "code2" : "#D19D2A"},{"n" : "$w-pink3", "code" : "#F178AE","n2" : "$w-pink4", "code2" : "#D467A7"},{"n" : "$w-turquoise3", "code" : "#00A4A4","n2" : "$w-grey2", "code2" : "#696969"},{"n" : "$w-orange3", "code" : "#F47B28","n2" : "$w-grey2", "code2" : "#696969"} ]
				.windows
					h2 Window 8 color scheme (<a href="http://www.creepyed.com/wp-content/uploads/win8ColorsPersonalize.png" target="_blank">starting screen theme</a>)
					- windows.forEach(function(i, ind){
						div(style="background: #{i['code2']};")
							div(style="background: #{i['code']};").inner
							span= i['n2']
							span= i['code2']
							span= i['n']
							span= i['code']
					- })		


				- var flat = [ {'n' : '$f-turqouise', 'code': '#1abc9c', 'n2' : '$f-green-sea', 'code2': '#16a085'},{'n' : '$f-emerald', 'code': '#2ecc71','n2' : '$f-nephritis', 'code2': '#27ae60'},{'n' : '$f-peter-river', 'code': '#3498db','n2' : '$f-belize-hole', 'code2': '#2980b9'},{'n' : '$f-ametyhs', 'code': '#9b59b6','n2' : '$f-wisteria', 'code2': '#8e44ad'},{'n' : '$f-wet-asphalt', 'code': '#34495e','n2' : '$f-midnight-blue', 'code2': '#2c3e50'},{'n' : '$f-sun-flower', 'code': '#f1c40f','n2' : '$f-orange', 'code2': '#f39c12'},{'n' : '$-carrot', 'code': '#e67e22','n2' : '$f-pumpkin', 'code2': '#d35400'},{'n' : '$f-alizarin', 'code': '#e74c3c','n2' : '$f-pomegranate', 'code2': '#c0392b'},{'n' : '$f-clouds', 'code': '#ecf0f1','n2' : '$f-silver', 'code2': '#bdc3c7'},{'n' : '$f-concrete', 'code': '#95a5a6','n2' : '$f-asbestos', 'code2': '#7f8c8d'} ]
				.flat
					h2 Flat UI colors (<a href="http://flatuicolors.com/" target="_blank">www.flatuicolors.com</a>)
					- flat.forEach(function(i){
						div(style="background: #{i['code']};")
							div(style="background: #{i['code2']};")
							span= i['n']
							span= i['code']
							span= i['n2']
							span= i['code2']
					- })


		#container.grid
			h2 Grid
			div
				.col_12 12
			div
				.col_6 6
				.col_6 6
			div
				.col_4 4
				.col_4 4
				.col_4 4
			div
				.col_5 5
				.col_7 7
			div
				- for(var i=0; i<6;i++)
					.col_2 2

			div
				- for(var i=0; i<12;i++)
					.col_1 1

		#container.html-elements
			h2 HTML elements
			div 
				ul
					| This is a list
					li list item
					li list item
					li list item
						ul
							li deeper list item
							li deeper list item
					li list item

				ol
					| This is a list
					li list item
					li list item
					li list item
